{
  "name": "multi-package-react-native",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "react-native start",
    "pod:update": "cd ios && pod update",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "aggregate:bundles": "node ./packages/react-bundle-aggregator/index.js prepare -d $PWD -y -w",
    "build:ios": "node_modules/.bin/react-native bundle --platform ios --dev false --entry-file ./index.js --bundle-output ios/build/index.ios.bundle.js",
    "build:android": "node_modules/.bin/react-native bundle --platform android --dev false --entry-file ./index.js --bundle-output android/build/index.android.bundle.js"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-native": "^0.50.4"
  },
  "devDependencies": {
    "babel-preset-expo": "^5.0.0",
    "react-bundle-aggregator": "^1.0.0"
  },
  "private": true
}
